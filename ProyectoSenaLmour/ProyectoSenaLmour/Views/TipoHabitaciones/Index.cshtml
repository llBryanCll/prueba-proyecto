@model IEnumerable<ProyectoSenaLmour.Models.TipoHabitacione>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.datatables.net/v/dt/dt-2.0.1/datatables.min.js"></script>
<script src="DataTables/datatables.min.js"></script>
<script src="~/js/site.js"></script>
<br>
<br>


<div class="card">
    <div class="card-header">
        <i class="fa-solid fa-bed"></i>Tipo De Habitación
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12" />
            <p>
                <a asp-action="Create" button type="button" class="btn btn-success">Crear nuevo</a>

                <form asp-controller="TipoDeHabitación" asp-action="Index">
                </form>

            </p>

        </div>

<!--probando-->

<table id="roomTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomTipoHabitacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroPersonas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomTipoHabitacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroPersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                <a asp-action="Edit" button type="button" class="btn btn-primary" asp-route-id="@item.IdTipoHabitacion">Editar</a> |
                <a asp-action="Details" button type="button" class="btn btn-secondary" asp-route-id="@item.IdTipoHabitacion">Detalles</a> |
                <a asp-action="Delete" button type="button" class="btn btn-danger" asp-route-id="@item.IdTipoHabitacion">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
