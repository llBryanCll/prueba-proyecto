@model IEnumerable<ProyectoSenaLmour.Models.Reserva>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdn.datatables.net/v/dt/dt-2.0.1/datatables.min.js"></script>
<script src="DataTables/datatables.min.js"></script>
<script src="~/js/site.js"></script>

<br>
<br>
<div class="card">
    <div class="card-header">
        <i class="fa-solid fa-calendar-check"></i>Listado De Reservas
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12" />
            <p>
                <a asp-action="Create" button type="button" class="btn btn-success">Crear Reserva</a>

                <form asp-controller="Reserva" asp-action="Index">
                </form>

            </p>

        </div>

<table id="bookingTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NroDocumentoClienteNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaReserva)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoReservaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
@*             <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinalizacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iva)
            </th> *@
@*             <th>
                @Html.DisplayNameFor(model => model.NroPersonas)
            </th> *@
@*             <th>
                @Html.DisplayNameFor(model => model.IdMetodoPagoNavigation)
            </th> *@
@*             <th>
                @Html.DisplayNameFor(model => model.NroDocumentoUsuarioNavigation)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NroDocumentoClienteNavigation.NroDocumento)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaReserva)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdEstadoReservaNavigation.IdEstadoReserva)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
@*             <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinalizacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descuento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iva)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroPersonas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdMetodoPagoNavigation.IdMetodoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NroDocumentoUsuarioNavigation.NroDocumento)
            </td> *@
            <td>
                    <a asp-action="Edit" button type="button" class="btn btn-primary" asp-route-id="@item.IdReserva">Editar</a> |
                    <a asp-action="Detailes" button type="button" class="btn btn-secondary" asp-route-id="@item.IdReserva">Detalles</a> |
                    <a asp-action="Delete" button type="button" class="btn btn-danger" asp-route-id="@item.IdReserva">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
