@model UsuarioF
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/scripts.js" />


    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!-- Agrega tus enlaces a las hojas de estilo y scripts adicionales aquí -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>

              

        video {
            position: absolute;
            top: 0;
            left: 0;
            min-width: 100%;
            min-height: 100%;
            z-index: -1; /* Coloca el video detrás de los demás elementos */
        }

       
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: Arial, sans-serif;
            background: url('../../wwwroot/css/tipi-tienda-de-campana-en-kampaoh-cambrils.jpeg') no-repeat center center fixed;
            background-size: cover;
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            z-index: 1;
        }

        .login-form {
            position: relative; /* Necesario para la posición del botón de cierre */
            max-width: 400px; /* Ancho máximo para el formulario */
        }

        .card {
            border-radius: 15px;
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2); /* Efecto de sombra más suave */
            background: rgba(255, 255, 255, 0.8); /* Color de fondo de la tarjeta */
        }

        .close-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: none;
            border: none;
            cursor: pointer;
        }

        .side-image {
            max-width: 550px; /* Tamaño máximo de la imagen */
            margin-right: 30px; /* Espacio entre la imagen y el formulario */
            overflow: hidden; /* Oculta cualquier desbordamiento */
            border-radius: 15px; /* Bordes redondeados */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra suave */
            transition: box-shadow 0.3s ease; /* Transición suave en la sombra */
        }

            /* Efecto de sombra al pasar el ratón */
            .side-image:hover {
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2); /* Sombra más pronunciada al pasar el ratón */
            }



    </style>
</head>
<body>

    <video autoplay loop muted playsinline>
        <source src="~/css/mixkit-very-close-shot-of-the-leaves-of-a-tree-wet-18310-medium.mp4" type="video/mp4">
    </video>

    <div class="container">
        <img src="~/css/tipi-tienda-de-campana-en-kampaoh-cambrils.jpeg" alt="Side Image" class="side-image">
        <div class="login-form">
            <div class="card p-4">
                <h3 class="card-title text-center mb-3">Iniciar sesión</h3>
                <form asp-controller="acceso" asp-action="Index" method="post">
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Correo">
                        <div id="emailHelp" class="form-text">Nunca compartiremos su correo electrónico con nadie.</div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Contraseña">
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Recordarme</label>
                    </div>
                   


                   @*  <button type="submit" class="btn btn-primary">Iniciar sesión</button> *@

                   @*  <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    </div> *@


                    @* <a href="#" class="forgotten-password">¿Ha olvidado su contraseña?</a> *@

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                        <span class="text-danger" style="font-size: smaller; color: #999;">El correo electrónico autorizado es obligatorio.</span>
                    </div>




                </form>
                <button type="button" class="close-btn"><i class="fas fa-times"></i></button>
            </div>
        </div>
    </div>




    <script src="https://kit.fontawesome.com/your-fontawesome-kit-code.js" crossorigin="anonymous"></script>
    <script src="script.js"></script>



    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/Scripts.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Scripts.js"></script>
    <script src="https://kit.fontawesome.com/b7eff4b9c4.js" crossorigin="anonymous"></script>

</body>
</html>

