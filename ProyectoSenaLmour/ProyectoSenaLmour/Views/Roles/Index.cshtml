@model IEnumerable<ProyectoSenaLmour.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/js/site.js"></script>

<br>
<br>


<h1></h1>
<div class="card">
    <div class="card-header">
        <i class="fa-solid fa-user-plus"></i> Lista de Roles
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <form asp-controller="Roles" asp-action="Index">
                </form>
            </div>
            
            <p>
                <a asp-action="Create" button type="button" class="btn btn-success">Crear Nuevo</a>
            </p>
        </div>

        <table id="rolesTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.NomRol)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NomRol)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>
                            <a asp-action="Edit" button type="button" class="btn btn-primary" asp-route-id="@item.IdRol">Editar</a>
                            <a asp-controller="Permiso" asp-action="Index"   button type="button" class="btn btn-secondary">Permisos</a>
                            <a asp-action="Delete" button type="button" class="btn btn-danger" asp-route-id="@item.IdRol">Eliminar</a>
                        </td>
                    </tr>
                }

           


            </tbody>
        </table>
    </div>
</div>
