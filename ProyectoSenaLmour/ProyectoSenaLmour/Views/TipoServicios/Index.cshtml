@model IEnumerable<ProyectoSenaLmour.Models.TipoServicio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.datatables.net/v/dt/dt-2.0.1/datatables.min.js"></script>
<script src="DataTables/datatables.min.js"></script>
<script src="~/js/site.js"></script>


<br>
<br>
<div class="card">
    <div class="card-header">
        <i class="fa-solid fa-users-gear"></i>Tipo De Servicios
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-12" />
            <p>
                <a asp-action="Create" button type="button" class="btn btn-success">Crear Tipo de servicio</a>

                <form asp-controller="TipoDeServicio" asp-action="Index">
                </form>

            </p>

        </div>

<table id="serviceTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreTipoServicio)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreTipoServicio)
            </td>
            <td>
                <a asp-action="Edit" button type="button" class="btn btn-primary" asp-route-id="@item.IdTipoServicio">Editar</a> |
                    <a asp-action="Detaile" button type="button" class="btn btn-secondary"  asp-route-id="@item.IdTipoServicio">Detalles</a> |
                <a asp-action="Delete" button type="button" class="btn btn-danger" asp-route-id="@item.IdTipoServicio">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
